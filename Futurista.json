{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "âš¡ ",
    "foreground": "#FF00FF",
    "background": "transparent"
  },
  "console_title_template": "{{.UserName}}@{{.HostName}} in {{ .PWD }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u256d\u2500",
          "foreground": "#00FF00",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "docker": "\uf308 ",
            "linux": "\uf17c ",
            "macos": "\uf179 ",
            "windows": "\ue62a ",
            "wsl": "\uf83c "
          },
          "trailing_diamond": " |",
          "template": " {{.Icon}}",
          "foreground": "#00FF00",
          "powerline_symbol": " >",
          "type": "os",
          "style": "diamond"
        },
        {
          "type": "path",
          "style": "powerline",
          "template": "\uf07b {{ .Path }}",
          "foreground": "#00FFFF",
          "powerline_symbol": " | ",
          "properties": {
            "folder_separator_icon": "/",
            "mapped_style": "folder",
            "show_drive": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": " >",
          "background": "transparent",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#00FF00",
          "foreground_templates": [
            "{{ if and (not .Working.Changed) (not .Staging.Changed) (eq .StashCount 0) }}#00FF00{{ end }}",
            "{{ if .Working.Changed }}#FF5C00{{ end }}",
            "{{ if .Staging.Changed }}#00C3FF{{ end }}",
            "{{ if gt .StashCount 0 }}#FF0044{{ end }}",
            "{{ if or .Merge .Rebase .Revert .CherryPick .Bisect }}#FF00FF{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "template": " \ue641 {{ .CurrentDate | date \"15:04:05\" }} ",
          "foreground": "#FF00FF",
          "type": "time",
          "style": "plain"
        },
        {
          "properties": {
            "display_memory": true
          },
          "template": "| {{ (div ((sub .PhysicalTotalMemory .PhysicalAvailableMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB",
          "foreground": "#00FFFF",
          "type": "sysinfo",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "template": " | \ueba2 {{ .FormattedMs }} ",
          "foreground": "#FFFF00",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u2570\u2500",
          "foreground": "#00FF00",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "template": "$",
          "foreground": "#00FF00",
          "type": "status",
          "style": "plain",
          "foreground_templates": ["{{ if gt .Code 0 }}#FF0000{{ end }}"]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
